      </div>

      <div className="patients-list">
        {getFilteredPatients().length > 0 ? (
          getFilteredPatients().map(patient => renderPatientCard(patient))
        ) : (
          <div className="no-patients">
            <div className="no-patients-icon">üë•</div>
            <h3>No Patients Found</h3>
